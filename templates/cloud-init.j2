#cloud-config
hostname: {{ inventory_hostname }}
coreos:
    update:
        reboot-strategy: best-effort
        group: {{ coreos_channel }}
write_files:
    - path: {{ coreos_exec_path }}/bin/python
      permissions: 0755
      content: |
        #!/bin/bash
        export LD_LIBRARY_PATH={{ coreos_exec_path }}/lib:$LD_LIBRARY_PATH
        {{ coreos_exec_path }}/bin/pypy "$@"
